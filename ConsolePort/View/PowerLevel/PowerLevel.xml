<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<StatusBar name="ConsolePortPowerLevel"
		minValue="0"
		maxValue="3"
		frameStrata="ARTWORK"
		parent="UIParent"
		enableMouse="true"
		movable="true"
		hidden="true">
		<Size x="104" y="12" />
		<Anchors>
			<Anchor relativeTo="UIParent" point="CENTER" y="20" x="-5" />
		</Anchors>
		<BarTexture parentKey="BarTexture" file="Interface\TargetingFrame\UI-StatusBar"/>
		<Frames>
			<Frame parentKey="OverlayFrame" setAllPoints="true">
				<Layers>
					<Layer level="OVERLAY">
						<Texture parentKey="Overlay" atlas="bonusobjectives-bar-frame">
							<Size x="130" y="30" />
							<Anchors>
								<Anchor point="CENTER" x="10" />
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<Texture parentKey="Icon">
							<Size x="25" y="25" />
							<Anchors>
								<Anchor point="RIGHT" relativeKey="$parent.Overlay" relativePoint="LEFT" />
							</Anchors>
						</Texture>
						<FontString parentKey="Text" inherits="GameFontHighlightSmallOutline" justifyH="CENTER">
							<Anchors>
								<Anchor point="CENTER" x="0" y="-12" />
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background">
					<Size x="105" y="35" />
					<Anchors>
						<Anchor point="CENTER" x="2" y="0" />
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Animations>
			<AnimationGroup parentKey="Critical" looping="REPEAT">
				<Alpha childKey="BarTexture" duration="0.25" order="1" fromAlpha="0" toAlpha="1" />
				<Alpha childKey="BarTexture" duration="0.25" order="2" fromAlpha="1" toAlpha="0" startDelay="0.25" />
			</AnimationGroup>
			<AnimationGroup parentKey="Charging" looping="REPEAT">
				<Alpha childKey="BarTexture" duration="0.25" order="1" fromAlpha="0" toAlpha="1" />
				<Alpha childKey="BarTexture" duration="0.25" order="2" fromAlpha="1" toAlpha="0" startDelay="0.25" />
				<Scripts>
					<OnPlay>
						self.fillValue = 1;
						self:GetParent():SetValue(self.fillValue);
					</OnPlay>
					<OnLoop>
						local bar = self:GetParent();
						local min, max = bar:GetMinMaxValues();

						self.fillValue = (self.fillValue % (max + 1)) + 1;
						bar:SetValue(Clamp(self.fillValue, min + 1, max));
					</OnLoop>
				</Scripts>
			</AnimationGroup>
		</Animations>
	</StatusBar>
	<Script file="PowerLevel.lua" />
</Ui>